<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.franshise.franshise">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".activites.ShowEvents"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity
            android:name=".activites.UpdateFranchise"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.ResetPassword"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.ChangePassowrs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.MyData"
            android:label="@string/title_activity_my_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.Setting"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activites.Policey" />
        <activity
            android:name=".activites.FranchiseOfCategory"
            android:label="@string/title_activity_franchise_of_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.NavigationShow"
            android:label="@string/title_activity_navigation_show"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.FranchiseView"
            android:label="@string/title_activity_franchise_view"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".services.RegisterToken"
            android:enabled="false"
            android:exported="false" />
        <service android:name=".services.ReciveNotification">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activites.AddFranchise"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.AddMarker"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.MarkerOwnerRegister"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.SendToOwnerOrMarker"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.MarkerDetails"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.MarkerView"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".activites.MarkersOfCategory" />
        <activity
            android:name=".activites.Main"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.ConformRegister"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.LanguageActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activites.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>