<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activites.AddMarker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_subscribtion_button"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/textView15h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="@string/myfranchise"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:gravity="right"
            android:background="@color/blue_subscribtion_button">

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue_subscribtion_button"
                android:drawableEnd="@drawable/ic_delete_black_24dp"
                android:drawableRight="@drawable/ic_delete_black_24dp"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:alpha="0.5"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue_subscribtion_button"
                android:drawableEnd="@drawable/addmarker"
                android:drawableRight="@drawable/addmarker"
                android:text="@string/add_franchises"
                android:textColor="@color/white"
                android:id="@+id/add_franchise1"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/myfranchise_res">

</android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/add_franchise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/blue_subscribtion_button"
        android:drawableStart="@drawable/addmarker"
        android:drawableLeft="@drawable/addmarker"
        android:gravity="center"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:paddingBottom="10dp"
        android:text="@string/add_franchises"
        android:textColor="@color/white"

        />
</LinearLayout>