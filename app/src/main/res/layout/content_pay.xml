<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activites.Pay"
    tools:showIn="@layout/app_bar_pay"
    android:orientation="vertical"
    android:background="@color/blue">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pay"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/droid"

        android:textColor="@color/white"
        android:background="@color/blue_subscribtion_button"/>


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layoutDirection="ltr"
        android:layout_marginRight="20dp"
        android:background="@drawable/register_edittext"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:weightSum="100"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="start"
            android:text="from:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/droid"

            />

        <TextView
            android:id="@+id/from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:background="@null"
            android:ems="10"
            android:paddingLeft="5dp"
            android:fontFamily="@font/droid"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineaarLayout1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layoutDirection="ltr"
        android:layout_marginRight="20dp"
        android:background="@drawable/register_edittext"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:weightSum="100"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="start"
            android:text="email:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/droid"

            />

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:background="@null"
            android:ems="10"
            android:paddingLeft="5dp"
            android:fontFamily="@font/droid"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_way"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/droid"
        android:textColor="@color/white"/>
<WebView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/web"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@color/blue"></WebView>

    <Button
        android:id="@+id/pick_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Attachphotobank"
        android:background="@color/blue_subscribtion_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/droid"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/bank_image"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dearCustomer"
        android:background="@color/blue_subscribtion_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:fontFamily="@font/droid"

        />

    <Button
        android:id="@+id/subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe"
        android:background="@drawable/send_button_back"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/droid"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

</ScrollView>