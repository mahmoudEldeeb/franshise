<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/login_gray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/search"
            android:fontFamily="@font/droid"
            android:textSize="20dp" />

    </LinearLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/search_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textSize="15dp"
            android:gravity="start"
            android:fontFamily="@font/droid"
            />
         <RelativeLayout
            android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <EditText
                 android:id="@+id/search_word"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:background="@drawable/login_edittext"
                 android:ems="10"
                 android:fontFamily="@font/droid"
                 android:inputType="textPersonName" />
            </RelativeLayout>

        <TextView
            android:id="@+id/textVisew9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mony"
            android:textSize="15dp"
            android:gravity="start"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/droid"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/register_edittext">
            <Spinner
                android:id="@+id/money_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/droid"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/textsView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="15dp"
            android:gravity="start"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/droid"
            />
        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/register_edittext">
    <Spinner
            android:id="@+id/spinner_cat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
        android:fontFamily="@font/droid"

        />
</RelativeLayout>
        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/send_button_back"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/droid"
            />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/franchise_res"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        >

    </android.support.v7.widget.RecyclerView>
</FrameLayout>

</FrameLayout>