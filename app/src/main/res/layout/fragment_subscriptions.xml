<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragments.SubscriptionsFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/send_blue">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="subscription"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:textStyle="bold"
        android:background="@color/blue_subscribtion_button"/>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sub_res">

</android.support.v7.widget.RecyclerView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bank_image"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/pick_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Attachphotobank"
        android:background="@color/blue_subscribtion_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dearCustomer"
        android:background="@color/blue_subscribtion_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />

    <Button
        android:id="@+id/subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscriptions"
        android:background="@drawable/send_button_back"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
android:layout_marginBottom="100dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
</ScrollView>